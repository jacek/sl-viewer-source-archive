<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel label="Ver Info" name="look_info">
	<panel.string name="not_available">
		(N\A)
	</panel.string>
	<panel.string name="unknown">
		(desconhecido)
	</panel.string>
	<panel label="vestimenta" name="look_management_panel">
		<accordion name="look_management_accordion">
			<accordion_tab name="look_group" title="Grupo de vestimenta">
				<panel name="look_info_group_bar">
					<text name="curr_look_name">
						Visual: [LOOK]
					</text>
					<button label="vestir" name="wear_look_btn"/>
					<scroll_list name="look_items_list">
						<scroll_list.columns label="Ver item" name="look_item"/>
						<scroll_list.columns label="Ordenar item de vestimenta" name="look_item_sort"/>
					</scroll_list>
					<button label="-" name="remove_from_look_btn"/>
				</panel>
			</accordion_tab>
			<accordion_tab name="inventory_group" title="Meu inventário">
				<panel name="lower_look_accordion">
					<panel name="inventory_bar">
						<text name="inventory_info_text">
							Meu inventário
						</text>
						<combo_box name="inventory_filter" tool_tip="Apenas mostrar os tipos selecionados no inventário"/>
					</panel>
					<panel name="look_item_filter_bar">
						<filter_editor label="Filtro de item de vestimenta" name="look_item_filter"/>
					</panel>
				</panel>
			</accordion_tab>
		</accordion>
	</panel>
	<panel name="button_bar">
		<button label="Adicionar" name="add_item_btn"/>
		<button label="Remover" name="remove_item_btn"/>
		<button label="CIMA" name="up_btn"/>
		<button label="BAIXO" name="down_btn"/>
	</panel>
</panel>
