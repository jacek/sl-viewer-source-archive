		<combo_box.item name="Inventory" label="Inventario" />
		<combo_box.item name="Lag" label="Atraso" />
		<combo_box.item name="MissingContent" label="Contenido perdido" />
		<combo_box.item name="LindenDollars(L$)" label="Linden Dólares (L$)" />
		<combo_box.item name="Permissions" label="Permisos" />
		<combo_box.item name="Physics" label="Física" />
		<combo_box.item name="Script" label="Script" />
		<combo_box.item name="Sound" label="Sonido" />
